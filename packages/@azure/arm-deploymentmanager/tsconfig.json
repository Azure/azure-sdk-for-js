{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "target": "es6",
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6"],
    "declaration": true,
    "outDir": "./cjs"
  },
  "include": ["./lib/**/*"],
  "exclude": ["node_modules"]
}
