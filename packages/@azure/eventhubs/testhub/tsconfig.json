{
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "commonjs",
    "preserveConstEnums": true,
    "newLine": "LF",
    "target": "es2017",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "allowJs": false,
    "noUnusedLocals":true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "lib": [
      "es2015",
      "dom",
      "dom.iterable",
      "es5",
      "es6",
      "es7",
      "esnext",
      "esnext.asynciterable",
      "es2015.iterable"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ],
  "include": [
    "cli.ts",
    "./commands"
  ]
}