{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",

    // The strict mode causes error for ts-node because it cannot find type definition for 'path-browserify' package
    "noImplicitAny": false
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../typings/**",
  ]
}