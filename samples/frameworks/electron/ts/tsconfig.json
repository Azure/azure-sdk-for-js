{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "removeComments": false,
        "outDir": "dist",
        "noImplicitReturns": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}