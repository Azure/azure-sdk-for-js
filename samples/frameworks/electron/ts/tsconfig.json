{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": false,
    "outDir": "dist",
    "noImplicitReturns": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
