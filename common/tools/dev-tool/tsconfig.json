{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,

    "lib": ["ES2021", "ESNext.AsyncIterable"],

    "newLine": "LF",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,

    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["test/samples/files/expectations/**/*"],
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
