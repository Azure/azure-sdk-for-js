{
  "compilerOptions": {
    "moduleResolution": "node",
    "noEmit": true,
    "lib": ["ES6", "ESNext.AsyncIterable"],
    "esModuleInterop": true,

    "newLine": "LF",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
