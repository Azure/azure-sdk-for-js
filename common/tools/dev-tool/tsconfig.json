{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    "lib": ["ES2023"],

    "newLine": "LF",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["test/samples/files/**/*"],
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
