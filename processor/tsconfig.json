{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "sourceMap": true,
    "newLine": "LF",
    "target": "es2017",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "importHelpers": true,
    "outDir": "dist/lib",
    "allowJs": false,
    "noUnusedLocals":true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./typings/lib",
    "declarationMap": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "testhub",
    "typings/**",
    "examples/**",
    "client"
  ],
  "include": [
    "./lib/**/*.ts"
  ]
}