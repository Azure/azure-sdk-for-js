{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "target": "es5",
        "sourceMap": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es6",
            "dom"
        ],
        "declaration": true,
        "outDir": "./esm",
        "importHelpers": true
    },
    "include": [
        "./test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}