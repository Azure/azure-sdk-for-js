{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "outFiles": ["${workspaceFolder}/dist-esm/**/*.js"],
      "preLaunchTask": "npm: compile",
      "args": ["-r", "esm", "-r", "test/common/setup.js", "${workspaceFolder}/test/**/*.spec.js"],
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "MOCHA_TIMEOUT": "999999"
      },
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "build",
      "program": "${workspaceFolder}/node_modules/typescript/bin/tsc",
      "args": ["-b --verbose"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug file",
      "program": "${file}",
      "env": {
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "MutliRegionWrite - Debug",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ]
}
