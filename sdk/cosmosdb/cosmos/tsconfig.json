{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist-esm",
    "preserveConstEnums": true,
    "removeComments": false,
    "target": "es6",
    "sourceMap": true,
    "inlineSources": true,
    "newLine": "LF",
    "resolveJsonModule": true,
    "composite": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "stripInternal": true,
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}
