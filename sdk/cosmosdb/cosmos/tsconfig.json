{
  "extends": "../../../tsconfig",
  "compilerOptions": {
    "module": "NodeNext",
    "strict": false,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "target": "ES2017",
    "newLine": "LF",
    "resolveJsonModule": true,
    "lib": [
      "es2019"
    ],
    "moduleResolution": "NodeNext",
    "composite": true,
    "stripInternal": true,
    "paths": {
      "@azure/cosmos": [
        "./src/index"
      ]
    },
    "rootDir": "."
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.cts",
    "samples-dev/**/*.ts",
    "test/**/*.ts",
    "test/**/*.mts",
    "test/**/*.cts"
  ]
}
