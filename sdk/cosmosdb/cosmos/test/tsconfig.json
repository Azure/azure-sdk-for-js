{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "target": "esnext",
    "sourceMap": true,
    "newLine": "LF",
    "composite": true,
    "noUnusedLocals": true
  }
}
