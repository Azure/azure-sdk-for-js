{
  "extends": "../../../tsconfig",
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "esnext"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "."
  },
  "exclude": [
    "node_modules",
    "./types/**/*.d.ts",
    "./samples/**/*.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.cts",
    "samples-dev/**/*.ts",
    "test/**/*.ts",
    "test/**/*.mts",
    "test/**/*.cts"
  ]
}
