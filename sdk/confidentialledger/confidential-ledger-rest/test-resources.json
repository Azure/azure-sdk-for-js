{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ledgerName": {
      "type": "string",
      "metadata": {
        "description": "Ledger Name"
      },
      "minLength": 3,
      "maxLength": 24
    },
    "principalId": {
      "type": "string",
      "metadata": {
        "description": "Oid of the user"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "tenantId": {
      "type": "string"
    },
    "clientId": {
      "type": "string"
    },
    "clientSecret": {
      "type": "string"
    }
  },
  "functions": [],
  "variables": {},
  "resources": [
    {
      "name": "[parameters('ledgerName')]",
      "type": "Microsoft.ConfidentialLedger/ledgers",
      "ledgerUri": "[concat('https://', parameters('ledgerName'), '.confidential-ledger.azure.com')]",
      "apiVersion": "2020-12-01-preview",
      "location": "[parameters('location')]",
      "properties": {
        "ledgerType": "Public",
        "aadBasedSecurityPrincipals": [
          {
            "principalId": "[parameters('principalId')]",
            "ledgerRoleName": "Administrator"
          },
          {
            "principalId": "[parameters('clientId')]",
            "ledgerRoleName": "Administrator"
          }
        ]
      }
    }
  ],
  "outputs": {
    "LEDGER_NAME": {
      "type": "string",
      "value": "[parameters('ledgerName')]"
    },
    "LEDGER_URI": {
      "type": "string",
      "value": "[resources[0]('ledgerUri')]"
    },
    "USER_AAD": {
      "type": "string",
      "value": "[parameters('principalId')]"
    },
    "TENANT_ID": {
      "type": "string",
      "value": "[parameters('tenantId')]"
    },
    "CLIENT_ID": {
      "type": "string",
      "value": "[parameters('clientId')]"
    },
    "CLIENT_SECRET": {
      "type": "string",
      "value": "[parameters('clientSecret')]"
    }
  }
}
