{
  "extends": "../../../tsconfig",
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "declaration": true,
    "paths": {
      "@azure/digital-twins-core": ["./src/index"]
    },
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "."
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.cts",
    "samples-dev/**/*.ts",
    "test/**/*.ts",
    "test/**/*.mts",
    "test/**/*.cts"
  ]
}
