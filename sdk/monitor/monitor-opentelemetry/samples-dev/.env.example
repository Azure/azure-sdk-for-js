# Azure Monitor OpenTelemetry Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Azure Application Insights connection string
# Get this from Azure Portal > Application Insights > Overview > Connection String
APPLICATIONINSIGHTS_CONNECTION_STRING=<your-connection-string>

# Optional: OpenTelemetry configuration
OTEL_METRIC_EXPORT_INTERVAL=60000
OTEL_SERVICE_NAME=azure-monitor-opentelemetry-samples
OTEL_SERVICE_VERSION=1.0.0
OTEL_SERVICE_NAMESPACE=my-namespace
OTEL_SERVICE_INSTANCE_ID=my-instance

# Optional: Custom resource attributes
OTEL_RESOURCE_ATTRIBUTES=service.name=my-service,service.namespace=my-namespace,service.instance.id=my-instance
