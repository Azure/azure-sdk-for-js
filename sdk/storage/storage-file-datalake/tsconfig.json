    "../storage-blob/src/policies/*.ts",
    "../storage-blob/src/StorageRetryPolicyFactory.ts",
    "../storage-blob/src/StorageBrowserPolicyFactory.ts",
    "../storage-blob/src/utils/cache.ts"
  ]
}
