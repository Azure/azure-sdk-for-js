  "compilerOptions": {
    "declarationDir": "./types/latest",
    "outDir": "./dist-esm",
    "lib": ["dom", "es5", "es6", "es7", "esnext"],

    "paths": {
      "@azure/storage-file-datalake": ["./src/index"]
    }
  },
  "include": [
    "./src/**/*.ts",
