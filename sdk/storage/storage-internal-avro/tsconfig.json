{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "newLine": "LF",
    "target": "ES2017",
    "moduleResolution": "NodeNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "esnext"
    ],
    "esModuleInterop": true,
    "rootDir": "."
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "./samples/**"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.cts",
    "samples-dev/**/*.ts",
    "test/**/*.ts"
  ]
}
