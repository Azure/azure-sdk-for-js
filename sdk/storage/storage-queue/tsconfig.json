{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "newLine": "LF",
    "target": "ES2017",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "module": "esNext",
    "outDir": "./dist-esm",
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "declarationDir": "./types/latest",
    "lib": ["dom", "es5", "es6", "es7", "esnext"],
    "esModuleInterop": true,

    "paths": {
      "@azure/storage-queue": ["./src/index"]
    }
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts", "./samples-dev/**/*.ts"]
}
