{
  "extends": "../../../tsconfig",
  "compilerOptions": {
    "declarationDir": "./types/latest",
    "outDir": "./dist-esm",
    "lib": ["dom", "es2019"],
    "paths": {
      "@azure/storage-blob": ["./src/index"]
    },
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "../storage-internal-avro/**/*.ts",
    "../storage-common/**/*.ts",
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.cts",
    "test/**/*.ts",
    "test/**/*.mts",
    "test/**/*.cts",
    "samples-dev/**/*.ts"
  ]
}
