{
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.DS_Store": true
    },
    "[typescript]": {
      "editor.formatOnSave": true,
      "editor.tabSize": 2,
      "editor.detectIndentation": false
    },
    "[json]": {
      "editor.formatOnSave": true,
      "editor.tabSize": 2,
      "editor.detectIndentation": false
    },
    "[yaml]": {
      "editor.formatOnSave": true,
      "editor.tabSize": 2,
      "editor.detectIndentation": false
    },
    "editor.rulers": [
      100
    ],
    "typescript.preferences.quoteStyle": "double",
    "javascript.preferences.quoteStyle": "double"
  }