{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/api-extractor.schema.json",
  "compiler": {
    "configType": "tsconfig",
    "rootFolder": "."
  },
  "apiReviewFile": {
    "enabled": true,
    "apiReviewFolder": "./etc"
  },
  "validationRules": {
    "missingReleaseTags": "allow"
  },
  "project": {
    "entryPointSourceFile": "esm/index.d.ts"
  },
  "dtsRollup": {
    "enabled": true,
    "mainDtsRollupPath": "../dist/index.d.ts"
  }
}
