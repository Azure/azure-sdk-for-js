{
  "extends": "../../../tsconfig",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "rootDir": ".",
    "importHelpers": true,
    "lib": ["DOM", "ES2017"],
    "paths": {
      "@azure/web-pubsub-client-protobuf": ["./src/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.cts",
    "src/**/*.mts",
    "src/generated/clientProto.cjs",
    "src/generated/clientProto.d.cts",
    "src/generated/clientProto.js",
    "src/generated/clientProto.d.ts",
    "test/**/*.ts",
    "samples-dev/**/*.ts"
  ]
}
