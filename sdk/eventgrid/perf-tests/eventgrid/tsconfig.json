{
  "extends": "../../../../tsconfig",
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2015",
    "lib": ["ES6", "ESNext.AsyncIterable", "DOM"],
    "noEmit": true,
    "moduleResolution": "NodeNext",
    "rootDir": "."
  },
  "compileOnSave": true,
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.cts",
    "samples-dev/**/*.ts",
    "test/**/*.ts",
    "test/**/*.mts",
    "test/**/*.cts"
  ]
}
