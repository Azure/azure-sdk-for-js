# Copy this file to .env and fill in your values

# Option 1: Use connection string (recommended)
COMMUNICATION_CONNECTION_STRING="endpoint=https://your-resource.communication.azure.com/;accesskey=your-access-key"

# Option 2: Use endpoint and access key separately
# COMMUNICATION_ENDPOINT="https://your-resource.communication.azure.com/"
# COMMUNICATION_ACCESS_KEY="your-access-key"

# Phone numbers
AZURE_PHONE_NUMBER="+1234567890"  # Your Azure Communication Services phone number
TO_PHONE_NUMBER="+1234567890"     # Optional: phone number to send to (defaults to same as from)