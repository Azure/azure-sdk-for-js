{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "newLine": "LF",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./typings",
    "lib": ["es2015"]
  },
  "compileOnSave": true,
  "include": ["typings/*"],
  "exclude": ["node_modules/*"]
}
