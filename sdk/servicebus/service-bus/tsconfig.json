{
  "extends": "../../../tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": [
      "dom",
      "ES2018.AsyncIterable"
    ],
    "paths": {
      "@azure/service-bus": [
        "./src/index"
      ]
    },
    "moduleResolution": "NodeNext",
    "rootDir": "."
  },
  "exclude": [
    "node_modules",
    "./types/**/*.d.ts",
    "./samples/**/*.ts",
    "test/perf-js-libs/*",
    "test/perf/track-1",
    "test/stress*"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.mts",
    "./src/**/*.cts",
    "./samples-dev/**/*.ts",
    "./test/**/*.ts"
  ]
}