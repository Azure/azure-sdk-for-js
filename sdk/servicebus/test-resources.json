{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "namespace_service_bus_node": {
      "defaultValue": "arm-azure-sdk-test",
      "type": "string"
    },
    "namespace_service_bus_browser": {
      "defaultValue": "arm-azure-sdk-test-browser",
      "type": "string"
    }
  },
  "variables": {
    "authorizationApiVersion": "2017-04-01",
    "location": "[resourceGroup().location]",
    "authorizationRuleNameNode": "[concat(parameters('namespace_service_bus_node'), '/RootManageSharedAccessKey')]",
    "authorizationRuleNameBrowser": "[concat(parameters('namespace_service_bus_browser'), '/RootManageSharedAccessKey')]"
  },
  "resources": [
    {
      "type": "Microsoft.ServiceBus/namespaces",
      "apiVersion": "2018-01-01-preview",
      "name": "[parameters('namespace_service_bus_node')]",
      "location": "[variables('location')]",
      "sku": {
        "name": "Standard",
        "tier": "Standard"
      },
      "properties": {
        "zoneRedundant": false
      }
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/AuthorizationRules",
      "apiVersion": "2015-08-01",
      "name": "[variables('authorizationRuleNameNode')]",
      "location": "[variables('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces', parameters('namespace_service_bus_node'))]"
      ],
      "properties": {
        "rights": ["Listen", "Manage", "Send"]
      }
    },
    {
      "type": "Microsoft.ServiceBus/namespaces",
      "apiVersion": "2018-01-01-preview",
      "name": "[parameters('namespace_service_bus_browser')]",
      "location": "[variables('location')]",
      "sku": {
        "name": "Standard",
        "tier": "Standard"
      },
      "properties": {
        "zoneRedundant": false
      }
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/AuthorizationRules",
      "apiVersion": "2015-08-01",
      "name": "[variables('authorizationRuleNameBrowser')]",
      "location": "[variables('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces', parameters('namespace_service_bus_browser'))]"
      ],
      "properties": {
        "rights": ["Listen", "Manage", "Send"]
      }
    }
  ],
  "outputs": {
    "SERVICEBUS_CONNECTION_STRING": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.ServiceBus/namespaces/authorizationRules', parameters('namespace_service_bus_node'), 'RootManageSharedAccessKey'), variables('authorizationApiVersion')).primaryConnectionString]"
    },
    "SERVICEBUS_CONNECTION_STRING_BROWSER": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.ServiceBus/namespaces/authorizationRules', parameters('namespace_service_bus_browser'), 'RootManageSharedAccessKey'), variables('authorizationApiVersion')).primaryConnectionString]"
    }
  }
}
