{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./dist",
    "declarationDir": "./types",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    /* Advanced Options */
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
