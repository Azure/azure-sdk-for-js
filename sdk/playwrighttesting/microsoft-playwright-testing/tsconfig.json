{
  "extends": "../../../tsconfig",
  "compilerOptions": {
    "importHelpers": true,
    "module": "NodeNext",
    "skipLibCheck": true,
    "paths": {
      "@azure/microsoft-playwright-testing": [
        "./src/index"
      ]
    },
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.cts",
    "samples-dev/**/*.ts",
    "test/**/*.ts",
    "test/**/*.mts",
    "test/**/*.cts"
  ]
}
