{
  "extends": "../../../tsconfig",
  "compilerOptions": {
    "importHelpers": true,
    "module": "NodeNext",
    "skipLibCheck": true,
    "paths": {
      "@azure/microsoft-playwright-testing": [
        "./src/index"
      ]
    },
    "moduleResolution": "NodeNext",
    "rootDir": "."
  },
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "samples"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.cts",
    "samples-dev/**/*.ts",
    "test/**/*.ts",
    "test/**/*.mts",
    "test/**/*.cts"
  ]
}
