<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{displayName}} â€“ editor</title>
  <link rel="stylesheet" href="./styles/shared.css">
  <link rel="stylesheet" href="./styles/editor.css">
  <script type="module">
    import initialize, {onChange} from "./editor"

    initialize()

    window.onChange = onChange
  </script>
</head>
<body>

<fieldset class="form flex flex-item flex-item-grow no-overflow">
  <div class="form-group">
    <div class="form-group">
      <label class="form-label" for="field1">field1</label>
      <div class="input-group">
        <input id="field1" class="form-control" type="text"
               oninput="onChange({field1: this.value ? this.value : undefined})" />
      </div>
    </div>

    <div class="form-group">
      <label class="form-label" for="field2">field2</label>
      <div class="input-group">
        <input id="field2" class="form-control" type="text"
               oninput="onChange({field2: this.value ? this.value : undefined})" />
      </div>
    </div>
  </div>
</fieldset>

</body>
</html>
