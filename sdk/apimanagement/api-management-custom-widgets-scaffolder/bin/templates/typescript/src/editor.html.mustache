<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{displayName}} â€“ editor</title>
  <link rel="stylesheet" href="./styles/editor.scss">
  <script type="module">
    import initialize, {onChange} from "./editor"

    initialize()

    window.onChange = onChange
  </script>
</head>
<body>
<fieldset class="form flex flex-item flex-item-grow no-overflow">
  <div class="form-group">
    <div class="form-group">
      <label class="form-label" for="label1">Label 1</label>
      <div class="input-group">
        <input id="label1" class="form-control" type="text"
               oninput="onChange({label1: this.value})" />
      </div>
    </div>

    <div class="form-group">
      <label class="form-label" for="label2">Label 2</label>
      <div class="input-group">
        <input id="label2" class="form-control" type="text"
               oninput="onChange({label2: this.value})" />
      </div>
    </div>

    <div class="form-group">
      <label class="form-label" for="placeholder">Placeholder</label>
      <div class="input-group">
        <input id="placeholder" class="form-control" type="text"
               oninput="onChange({placeholder: this.value})" />
      </div>
    </div>

    <div class="form-group">
      <label class="form-label" for="actionUrl">Action URL</label>
      <div class="input-group">
        <input id="actionUrl" class="form-control" type="text"
               oninput="onChange({actionUrl: this.value})" />
      </div>
    </div>
  </div>
</fieldset>
</body>
</html>
