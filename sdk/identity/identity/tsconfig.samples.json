{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "newLine": "LF",
    "target": "es5",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "module": "commonjs",
    "outDir": "./dist-esm",
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "declarationDir": "./types",
    "lib": ["dom", "es5", "es6", "es7", "esnext"],
    "esModuleInterop": true
  },
  "include": ["./samples/**/*.ts"]
}
